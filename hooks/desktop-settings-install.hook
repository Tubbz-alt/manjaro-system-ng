# NOTE: will not run if the transaction is interrupted for any reason

[Trigger]
Operation = Install
Operation = Upgrade
Type = File
Target = etc/skel/*
Target = etc/skel/*/?*
Target = !etc/skel/.bashrc
Target = !etc/skel/.bash_profile
Target = !etc/skel/.bash_logout

[Action]
Description = Desktop settings information ...
When = PostTransaction
Exec = /usr/share/libalpm/scripts/desktop-settings-install
NeedsTargets
