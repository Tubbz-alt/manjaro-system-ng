#!/bin/sh

source @prefix@/share/libalpm/util-pacman.sh

# running dirmngr helps prevent pacman-key from failing to connect to servers
dirmngr </dev/null

declare -A keys=([artoo]=5DCB998E
		[kirek]=AC97B894
		[ayceman]=604F8BA2
		[korrode]=5C0102A6
		[oberon]=663CA268)
# [stefano]=

for name in ${!keys[@]};do
	echo "Get $name's signature ..."
	pacman-key -r ${keys[$name]}
	pacman-key --lsign-key ${keys[$name]}
done
